check process postgres with pidfile /var/run/postgresql/12-main.pid
   group database
   start program = "/etc/init.d/postgresql start"
   stop  program = "/etc/init.d/postgresql stop"
   if failed unixsocket /var/run/postgresql/.s.PGSQL.5432 protocol pgsql 
      then restart
   if failed host $HOST port 5432 protocol pgsql then restart

